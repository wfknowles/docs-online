
<div class="authform" style="max-width: 530px;">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>

      <div class="row login-header" style="text-align: center;color: white;">

        <div class="col-md-12" style="padding-left: 17%;">
          <img src="<%= image_path("logo.png") %>" style="height: 90px;float: left;">
          <img src="<%= image_path("separator.svg") %>" style="height: 120px;float: left;" class="v-separator">
          <img src="<%= image_path("logo-white.svg") %>" style="height: 90px;float: left;">
          <div class="clearfix"></div>
        </div>

        <div class="col-md-12">
          <h1>Docs Who Care Online</h1>

          <p class="col-md-12">Welcome to the Docs Who Care Staff and Provider Portal. To access your information, sign in below. If you believe you should have access to this portal, contact the network administrator.</p>

        </div>
      </div>



      <h3 style="color: white;">Sign in</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>
            <%= f.label :email, :style=>"color:white" %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
                </div>
                <div class="form-group">

                      <%= f.label :password , :style=>"color:white"%>
                      <%= f.password_field :password, class: 'form-control' %>
                          </div>
                          <%= f.submit 'Sign in', :class => 'button right', :id => "custom-sigin-button" %>
                          <% if devise_mapping.rememberable? -%>
                              <div class="checkbox" style="width:150px">
                                <label style="color: white;">
                                  <%= f.check_box :remember_me %> Remember me
                                </label>
                              </div>
                          <% end -%>
                      <% end %>
                      </div>
