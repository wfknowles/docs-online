<div class="container" style="margin-top: 20px;margin-bottom: 20px;">
  <div class="left">
    <%=form_tag(documents_path,:method=>"get",id:"search-form") do %>
        <%=text_field_tag :search,params[:search], placeholder:"Search Documnet...",:style=>"padding:3px;margin-right:3px;width:200px;height:29px;" %>
        <%= submit_tag 'SEARCH',:name=>nil,:class=>"btn btn-custom pull-right"%>
    <% end %>
  </div>

  <div class="right">
    <%if current_user.try(:admin?)%>
        <%= link_to 'NEW DOCUMENT', new_document_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
    <% end %>

  </div>
</div>

<div class="container">
  <div class="form-group" style="min-height: 500px;">
    <table class="table table-responsive">
      <thead>
      <tr>
        <th style="width: 46%;padding-left: 100px">NAME</th>
        <th>CREATOR</th>
        <th>DATE CREATED</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @documents.each do |document| %>
          <tr>
            <td style="width: 46%;padding-left: 100px;"><%=link_to document.name,document ,:class=>"link-to-field"%></td>
            <td><%= document.creator %></td>
            <td><%= document.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
