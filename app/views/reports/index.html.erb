<div class="container" style="margin-top: 20px;margin-bottom: 20px;">
  <div class="left">
    <%=form_tag(reports_path,:method=>"get",id:"search-form") do %>
        <%=text_field_tag :search,params[:search], placeholder:"Search Report..." ,:style=>"padding:3px;margin-right:4px;width:200px;height:29px;" %>
        <%= submit_tag 'SEARCH',:name=>nil,:class=>"btn btn-custom pull-right"%>
    <% end %>
  </div>

  <div class="right">
    <%if current_user.try(:admin?)%>
        <%= link_to 'NEW REPORT', new_report_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="form-group" style="min-height: 500px;">
    <table class="table table-responsive">
  <thead>
    <tr>
      <th style="width: 35%;padding-left: 100px">NAME</th>
      <th>CREATOR</th>
      <th>TYPE</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td style="width: 35%;padding-left: 100px"><%=link_to report.name,report %></td>
        <td style="width: 30%;"><%= report.creator %></td>
        <td><%= report.typed %></td>

        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>

