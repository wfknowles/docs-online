<div class="container" style="margin-top: 20px;margin-bottom: 20px;">
  <div class="left">
    <%= form_tag( stickies_path, :method => "get", id: "search-form") do %>
        <%=text_field_tag :search,params[:search], placeholder: "Search Stricky..." ,:style=>"padding:3px;margin-right:1px;width:200px;height:29px;"%>
        <%= submit_tag 'SEARCH',:author=>nil,:class=>"btn btn-custom"%>
    <% end %>
  </div>
  <div class="right">
    <%= link_to 'NEW STICKY', new_sticky_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
  </div>
</div>
<div class="container">
  <div class="form-group" style="min-height: 500px;">
    <table class="table table-responsive">
      <thead>
      <tr>
        <th>AUTHOR</th>
        <th>CATEGORY</th>
        <th>TIMESTAMP</th>
        <th>HIDE STICKY</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @stickies.each do |sticky| %>
          <tr>
            <td><%=link_to sticky.author,sticky %></td>
            <td><%= sticky.category %></td>
            <td><%= sticky.timestamp %></td>
            <td><%= sticky.hide_sticky %></td>
            <td><%= link_to 'Show', sticky %></td>
            <td><%= link_to 'Edit', edit_sticky_path(sticky) %></td>
            <td><%= link_to 'Destroy', sticky, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>