
  <div class="container" style="margin-top: 20px;margin-bottom: 20px;">
    <div class="left">
      <%= form_tag(sites_path, :method => "get", id: "search-form") do %>
          <%=text_field_tag :search,params[:search], placeholder: "Search Site..." ,:style=>"padding:3px;margin-right:1px;width:200px;height:29px;"%>
          <%= submit_tag 'SEARCH',:hospital_name=>nil,:class=>"btn btn-custom"%>
      <% end %>
    </div>
    <div class="right">
      <%= link_to 'NEW SITE', new_site_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
    </div>
  </div>
  <div class="container">
  <div class="form-group" style="min-height: 500px;">
<table class="table table-responsive">
  <thead>
    <tr>
      <th>HOSPITAL</th>
      <th>CITY</th>
      <th>STATE</th>
      <th>ADDRESS</th>
      <th>PHONE NUMBER</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%=link_to site.hospital_name,site %></td>
        <td><%= site.address[0].city %></td>
        <td><%= site.status_options %></td>
        <td><%= site.address[0].street %></td>
        <td><%= site.phone_number %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  </div>